<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Sample Category"
            id="org.ensta.uml.sim.commands.category">
      </category>
      <command
            name="Sample Command"
            categoryId="org.ensta.uml.sim.commands.category"
            id="org.ensta.uml.sim.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="org.ensta.uml.sim.commands.sampleCommand"
            class="org.ensta.uml.sim.handlers.SampleHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.ensta.uml.sim.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Sample Menu"
               mnemonic="M"
               id="org.ensta.uml.sim.menus.sampleMenu">
            <command
                  commandId="org.ensta.uml.sim.commands.sampleCommand"
                  mnemonic="S"
                  id="org.ensta.uml.sim.menus.sampleCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.ensta.uml.sim.toolbars.sampleToolbar">
            <command
                  commandId="org.ensta.uml.sim.commands.sampleCommand"
                  icon="icons/sample.gif"
                  tooltip="Say hello world"
                  id="org.ensta.uml.sim.toolbars.sampleCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.ensta.uml.sim"
            name="Sample Category">
      </category>
      <view
            category="org.ensta.uml.sim"
            class="org.ensta.uml.sim.views.SimulatorView"
            icon="icons/sample.gif"
            id="org.ensta.uml.sim.views.SimulatorView"
            name="Simulation">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="org.ensta.uml.sim.views.SimulatorView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.ProblemView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
